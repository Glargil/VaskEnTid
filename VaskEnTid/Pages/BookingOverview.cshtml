@page
@model VaskEnTid.Pages.BookingOverviewModel
@{
	<head>
		<link href="~/css/index.css" rel="stylesheet" />
	</head>
	<body>
		<div class="container">
			<form method="get">
				<input type="text" name="TenantNameFilter" value="@Model.TenantNameFilter" placeholder="Tenant Name" />
				<input type="text" name="BookingDateFilter" value="@Model.BookingDateFilter" placeholder="Booking Date (yyyy-MM-dd)" />
				<input type="text" name="BookingIDFilter" value="@Model.BookingIDFilter" placeholder="Booking ID" />
				<button type="submit">Filter</button>
			</form>
			@foreach (var booking in Model.Bookings)
			{
				var tenant = Model.Tenants.FirstOrDefault(t => t.TenantID == booking.TenantID);
				<div class="card card-body" style="padding: 1em; margin-bottom: 1em;">
					<h3 class="card-title">BookingID: @booking.BookingID</h3>
					<p class="card-text">Tenant Name: @(tenant != null ? tenant.Name : "Unknown")</p>
					<p class="card-text">TenantID: @booking.TenantID</p>
					<p class="card-text">Date: @booking.BookingDate</p>
					<p class="card-text">Start time: @booking.StartSlot:00</p>
				</div>
			}
		</div>
	</body>
}
