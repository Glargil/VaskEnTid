@page
@model VaskEnTid.Pages.IndexModel
@{
    ViewData["Title"] = "Hjemmeside";
}

<div class="container">
    <section class="hero">
        <div class="hero-content">
            <h1>Velkommen til Vaskekælder Bookingsystem</h1>
            <p>Book tid til vaskemaskiner, tørretumblere og rullemaskiner uden problemer.</p>
            <a class="button" href="/CreateBooking">Start Booking</a>
        </div>
    </section>

    <section class="features">
        <h2>Funktioner</h2>
        <div class="feature-item">
            <i class="fas fa-calendar-check"></i>
            <h3>Nem Booking</h3>
            <p>Book din tid på få sekunder med vores enkle interface.</p>
        </div>
        <div class="feature-item">
            <i class="fas fa-user-friends"></i>
            <h3>Fælles Adgang</h3>
            <p>Systemet sikrer, at alle beboere kan tilgå og bruge maskinerne.</p>
        </div>
        <div class="feature-item">
            <i class="fas fa-clock"></i>
            <h3>Fleksible Tider</h3>
            <p>Vælg mellem flere tidsblokke for at passe til din tidsplan.</p>
        </div>
    </section>

    <section class="info">
        <h3>Information</h3>
        <p>Her kan du finde information om, hvordan systemet fungerer og hvordan du undgår konflikter ved booking.</p>
    </section>
</div>